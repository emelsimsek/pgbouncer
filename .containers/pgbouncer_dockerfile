FROM ubuntu:18.04

WORKDIR /workspace

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y git autoconf libevent-dev  pkg-config libssl-dev build-essential gdb

ARG USERNAME=emel
ARG USER_UID=1000
ARG USER_GID=$USER_UID

# Create the user
RUN groupadd --gid $USER_GID $USERNAME \
    && useradd --uid $USER_UID --gid $USER_GID -m $USERNAME \
    #
    # [Optional] Add sudo support. Omit if you don't need to install software after connecting.
    && apt-get update \
    && apt-get install -y sudo \
    && echo $USERNAME ALL=\(root\) NOPASSWD:ALL > /etc/sudoers.d/$USERNAME \
    && chmod 0440 /etc/sudoers.d/$USERNAME

RUN mkdir -p /home/$USERNAME && \
    chown $USERNAME:$USERNAME /home/$USERNAME

USER $USERNAME

RUN mkdir -p /home/$USERNAME/.ssh && \
    chmod 0700 /home/$USERNAME/.ssh

ARG SSH_KEY
RUN ssh-keyscan  github.com > /home/$USERNAME/.ssh/known_hosts && \
    echo "${SSH_KEY}" > /home/$USERNAME/.ssh/id_rsa && \
    chmod 600 /home/$USERNAME/.ssh/id_rsa


RUN cd  /home/$USERNAME && \
	git clone git@github.com:pgbouncer/pgbouncer.git && cd pgbouncer 
